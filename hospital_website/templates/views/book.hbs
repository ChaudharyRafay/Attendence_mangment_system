<!DOCTYPE html>
<html lang="en">
{{>headerlinks}}
<body>

     {{>navbar}}
    <!-- booking section starts   -->

    <section class="book" id="book">
<br><br><br><br>

        <div class="row">

            <div class="image">
                <img src="image/book-img.svg" alt="">
            </div>

            <form action="/book" method="POST">
                <h3>book appointment</h3>
                <input type="text" placeholder="your name" class="box" name="name" required>
                <input type="number" placeholder="your number" class="box" name="number" required>
                <input type="email" placeholder="your email" class="box" name="email" required>
                <select name="disease" id="cars" class="box" required>
                    <option value="disease">Select a related disease</option>
                    <option value="Dental">Dental</option>
                    <option value="Eyes">Eyes</option>
                    <option value="Bones">Bones</option>
                    <option value="Skin">Skin</option>
                </select>
                <input type="date" class="box" name="date" required>
                <input type="submit" value="book now" class="btn">
            </form>

        </div>

    </section>
{{>footer}}
    <!-- booking section ends -->
</body>
</html>


