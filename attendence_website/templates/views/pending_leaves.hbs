<!DOCTYPE html>
<html lang="en">
{{>headerlinks}}
<style>
   .container{
    margin-top: 25px;
    padding: 30px 30px;
  }
    body{
    background: url("../image/uni3\ \(1\).jpg");
    height: 100vh;
    width: 100vw;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  }
</style>
<body>
    {{>navbaradmin}}
  
    <div class="container bg-light d-flex flex-wrap align-items-center justify-content-center ">
      {{>alert}}
 <table class="table table-bordered">
      <thead style="background-color: #2b6777;">
        <tr>
          <th scope="col">Student name</th>
          <th scope="col">Arid No</th>
          <th scope="col">Email</th>
          <th scope="col">Date</th>
          <th scope="col">Reason</th>
          <th scope="col">Action</th>
          
        </tr>   
      </thead>
     {{#each list}}
      <tr>
      <td>{{this.student_name}}</td>
      <td>{{this.arid_no}}</td>
      <td>{{this.email}}</td>
      <td>{{this.date}}</td>
      
      <td><textarea class="form-control b-none" style="background-color: #f2f2f2;" id="textAreaExample2" rows="3"> {{this.reason}}</textarea> </td>
      
      <td> 
        
        <a class="text-decoration-none" href="/acceptleave/{{this._id}}">
        <button type="button" class="btn btn-success">Accept</button>
        </button>
        </a>
        <a class="text-decoration-none" href="/rejectleave/{{this._id}}">
        <button type="button" class="btn btn-danger">Reject</button>
        </button>
        </a>
      </td>
      
      </tr>
     {{/each}}
</div>

</div>
{{>timeout}}
{{>bootstrapjs}}
</body>
</html>